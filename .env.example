# ============================================================================
# ENVIRONMENT CONFIGURATION
# ============================================================================
# Set the environment: development, staging, or production
ENVIRONMENT=development

# ============================================================================
# API KEYS (REQUIRED)
# ============================================================================

# SearchAPI.io Configuration
# Get your API key from: https://www.searchapi.io/
# Required for: Sold/Completed listings (eBay Browse API doesn't support sold listings)
SEARCH_API_KEY=your_searchapi_io_key_here

# eBay Browse API Configuration (REQUIRED for active listings)
# Register at: https://developer.ebay.com/join
# Create an application to get your credentials
# Used for: All active listing searches
EBAY_APP_ID=your_ebay_app_id_here
EBAY_DEV_ID=your_ebay_dev_id_here
EBAY_CERT_ID=your_ebay_cert_id_here
EBAY_ENVIRONMENT=production

# ============================================================================
# AFFILIATE CONFIGURATION (OPTIONAL)
# ============================================================================

# eBay Partner Network (ePN) Affiliate Configuration
# Join ePN at: https://partnernetwork.ebay.com/
# Get your Campaign ID from your ePN dashboard
EBAY_CAMPAIGN_ID=your_epn_campaign_id_here
EBAY_ENABLE_AFFILIATE=false

# ============================================================================
# CACHE CONFIGURATION
# ============================================================================

# Redis URL for caching
# Local development: redis://localhost:6379
# Production: Use your hosting provider's Redis URL (Railway, Render, etc.)
REDIS_URL=redis://localhost:6379

# Cache TTL in seconds (optional, defaults defined in config.py)
# CACHE_TTL_SOLD=1800
# CACHE_TTL_ACTIVE=300

# ============================================================================
# RATE LIMITING
# ============================================================================

# Rate limit per IP (requests per minute)
# Default: 10
# RATE_LIMIT_PER_MINUTE=10

# ============================================================================
# MONITORING & ERROR TRACKING (PRODUCTION ONLY)
# ============================================================================

# Sentry DSN for error monitoring
# Get from: https://sentry.io/
# Leave empty to disable
SENTRY_DSN=

# Sentry environment name
# SENTRY_ENVIRONMENT=production

# Sentry sample rate (0.0 to 1.0)
# SENTRY_TRACES_SAMPLE_RATE=0.1

# ============================================================================
# SECURITY
# ============================================================================

# CORS allowed origins (comma-separated)
# Production: Use your actual domain
# Development: http://localhost:8000,http://127.0.0.1:8000
CORS_ALLOWED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# Enable CORS credentials
# CORS_ALLOW_CREDENTIALS=false

# ============================================================================
# LOGGING
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Development: DEBUG
# Production: INFO
LOG_LEVEL=INFO

# Log format: json or text
# Production: json (for log aggregation)
# Development: text (human-readable)
LOG_FORMAT=text

# ============================================================================
# STORAGE (OPTIONAL)
# ============================================================================

# Custom CSV storage path
# CSV_STORAGE_PATH=/path/to/csv/storage

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================

# Port for the application (set automatically by Railway/Render)
# PORT=8000

# Host for the application
# HOST=0.0.0.0

# Number of workers for production (Gunicorn)
# WEB_CONCURRENCY=4